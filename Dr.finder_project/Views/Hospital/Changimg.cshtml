@{
    ViewBag.Title = "Changimg";
    Layout = "~/Views/Shared/Hospital_master_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-12" style="margin:3%;">
        <div class="panel panel-widget forms-panel">
            <div class="forms">
                <div class="form-two widget-shadow">
                    <div class="form-title">
                        <h4>Update Image :</h4>
                    </div>

                    <div class="form-body" data-example-id="simple-form-inline">
                        @using (Html.BeginForm("Changimg", "Hospital", FormMethod.Post, new {id="form1", @class = "form-inline", enctype = "multipart/form-data" }))
                        {

                            <div class="form-group">
                            </div>
                            <div class="form-group">
                                @{
                            var n = Request.QueryString["v"];
                            var id = Request.QueryString["id2"];
                            //var chg = Request.QueryString["chg"];
                                }
                                <input type="hidden" name="hid" value="@id" />
                                @*<input type="hidden" name="chg" value="@chg" />*@
                                <input type="file" class="form-control" id="exampleInputEmail2" name="file" value="@n" data-bvalidator="extension[jpg:png:txt],required" data-bvalidator-msg="Please select file of type .jpg, .png" />
                            </div> <button type="submit" class="btn btn-default">Update</button>
                        }
                    </div>
                    @Html.Raw( TempData["himg"])
                </div>
            </div>
        </div>
    </div>
</div>