@{
    ViewBag.Title = "DoctorDetails";
    Layout = "~/Views/Shared/Hospital_master_Layout.cshtml";
}


<html>
<head>
    <title>DoctorDetails</title>

    

</head>
<body>
    <div class="container-fluid">
        <div class="jumbotron">
            <div class="grids">
                <div class="progressbar-heading grids-heading">

                </div>
                <div class="panel panel-widget forms-panel">
                    <div class="forms">
                        <div class="form-grids widget-shadow" data-example-id="basic-forms">
                            <div class="col-lg-12">
                                <br />
                                <div class="form-title" style="height:43px">

                                    <div class="col-lg-4">
                                        <h4>Add Doctor details Form :</h4>
                                    </div>

                                    <div class="col-lg-5">
                                        @Html.Raw(TempData["drreg"])
                                    </div>
                                    <div class="col-lg-2">
                                        <a href="@Url.Action("DoctorType","Hospital")"><input type="button" name="btn" style="background-color:#252525;border:0px;width:150px;" class="btn btn-success pull-right" value="Add Doctor Type+" /></a>
                                    </div>

                                </div>
                            </div>
                            <div class="form-body">
                                @using (Html.BeginForm("DoctorDetails", "Hospital", FormMethod.Post, new { id = "form1", enctype = "multipart/form-data" }))
                                {



                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Dr First Name</label>
                                        <input type="text" class="form-control" name="Dr_fName" placeholder="Enter Name" data-bvalidator="maxlength[10],required">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Dr Middel Name</label>
                                        <input type="text" class="form-control" name="Dr_mName" placeholder="Enter Name" data-bvalidator="maxlength[10],required">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Dr Last Name</label>
                                        <input type="text" class="form-control" name="Dr_lName" placeholder="Enter Name" data-bvalidator="maxlength[10],required">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Doctor Mobile No</label>
                                        <input type="text" class="form-control" id="exampleInputPassword1" name="Dr_Mob_No" placeholder="Enter Mobile No" data-bvalidator="number,minlength[10],maxlength[10],required">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email Address</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label style="color:red;">@Html.Raw(TempData["dremail"])</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" name="Dr_Email" placeholder="Email" data-bvalidator="email,required">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Doctor Type Name</label>
                                        <select class="form-control" name="Dr_type" data-bvalidator="required">

                                            @foreach (var item in ViewData["dr"] as List<Dr.finder_project.EDM.Doctor_Type_tbl>)
                                            {

                                                <option value="@item.Doctor_Type_Id ">@item.Doctor_Type_Name</option>
                                            }

                                        </select>
                                        <label for="exampleInputEmail1" style="margin-top:10px;">City</label>
                                        <select name="city" style="margin-top:10px;" class="form-control">


                                            <option value="Surat" selected>Surat</option>
                                            <option value="Navsari">Navsari</option>
                                            <option value="Bharuch">Bharuch</option>
                                            <option value="valsad">valsad</option>
                                            <option value="vapi">vapi</option>

                                        </select><br />



                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Gender</label><p></p>
                                        Male<input type="radio" name="gender" value="Male" checked>
                                        female<input type="radio" name="gender" value="Female">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Doctor Experience(Years)</label>
                                        <input type="text" class="form-control" id="exampleInputPassword1" name="Dr_expr" placeholder="Experience(years)" data-bvalidator="number,minlength[1],maxlength[3],required" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Password</label>
                                        <input type="password" class="form-control" id="equalto1" name="Password" placeholder="Password" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Confirm Password</label>
                                        <input type="password" class="form-control" name="c_Password" placeholder=" Confirm Password" data-bvalidator="equalto[equalto1],required" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputFile">Doctor Image</label>
                                        <input type="file" id="exampleInputFile" name="file" data-bvalidator="extension[jpg:png:txt],required" data-bvalidator-msg="Please select file of type .jpg, .png" />

                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Address</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" name="Dr_add" placeholder="Enter Address" data-bvalidator="required" />
                                    </div>

                                    <div class="checkbox">
                                        <label> <input type="checkbox"> Check me out </label>
                                    </div>
                                    <button type="submit" name="submit" class="btn btn-default">Submit</button>
                                    <button type="reset" name="submit" class="btn btn-default">Cencel</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>