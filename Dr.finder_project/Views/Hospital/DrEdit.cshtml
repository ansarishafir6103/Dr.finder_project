@{
    ViewBag.Title = "DrEdit";
    Layout = "~/Views/Shared/Hospital_master_Layout.cshtml";
}



@using (Html.BeginForm("DrEdit", "Hospital", FormMethod.Post, new {id="form1", @class = "form-horizontal", @role = "form", enctype = "multipart/form-data" }))
{

    <div class="container">
        <h1>Edit Profile</h1>
        <hr>
        @{var item = ViewData["dt"] as Dr.finder_project.Controllers.DrDetails;}
        <div class="row">
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="~/Images/@item.Doctor_Image" class="avatar img-circle" alt="avatar" style="height:150px;width:150px;">
                    <h6>Upload a different photo...</h6>

                    <input type="file" class="form-control" name="file" value="@item.Doctor_Image" data-bvalidator="extension[jpg:png:txt],required" data-bvalidator-msg="Please select file of type .jpg, .png" />
                </div>
            </div>

            <!-- edit form column -->
            <div class="col-md-9 personal-info">
                <div class="alert alert-info alert-dismissable">
                    <a class="panel-close close" data-dismiss="alert">×</a>
                    <i class="fa fa-coffee"></i>
                    This is an <strong>.alert</strong>. Use this to show important messages to the Admin.
                </div>
                <h3>Personal info</h3>

                @*<form class="form-horizontal" role="form">*@


                <div class="form-group">
                    <label class="col-lg-3 control-label">first name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="@item.Doctor_fname" name="fname" data-bvalidator="maxlength[10],required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Middel name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="@item.Doctor_mname" name="mname" data-bvalidator="maxlength[10],required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Last name</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="@item.Doctor_lname" name="lname" data-bvalidator="maxlength[10],required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="@item.Doctor_Email_Id" name="email" data-bvalidator="email,required" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Mobile Number:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" value="@item.Doctor_Mobile_No" name="mob" data-bvalidator="number,minlength[10],maxlength[10],required" />
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-3 control-label">Experiance Years:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" value="@item.Doctor_Experience" name="expr" data-bvalidator="number,minlength[1],maxlength[3],required" />
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-3 control-label">City:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" value="@item.Doctor_city" name="city" data-bvalidator="required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Address:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" value="@item.Doctor_Address" name="add" data-bvalidator="required" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Gender:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" value="@item.Doctor_gender" name="gndr" data-bvalidator="required">
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-3 control-label">Doctor Type:</label>
                    <div class="col-md-8">
                        <select name="dtype" class="form-control" data-bvalidator="required">
                            @foreach (var item1 in ViewData["dtype"] as List<Dr.finder_project.EDM.Doctor_Type_tbl>)
                            {

                                <option>@item1.Doctor_Type_Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <di+v class="col-md-8">
                        <input type="submit" class="btn btn-primary" value="Save Changes">
                        <span></span>
                        <input type="reset" class="btn btn-default" value="Cancel">
                    </di+v>
                </div>
                <input type="hidden" value="@item.Doctor_Id" name="did" />
                <input type="hidden" value="@item.Doctor_Type_Id" name="dtid" />
                @*</form>*@
            </div>
        </div>
    </div>
    <hr>
}