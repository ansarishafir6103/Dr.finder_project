@{
    ViewBag.Title = "HospitalView";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div class="container-fluid">
    <div class="jumbotron">


        <link href="~/Dr_finder_tmp/Admin_penal/web/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet" />





            <table id="example" border="0">
                <thead style="background-color:brown;color:white;">
                    <tr>
                        <th>Hospital Image</th>
                        <th>Name </th>
                        <th>Mobile No</th>
                        <th>Email Id</th>
                        <th>ReadMore</th>
                        <th>Edit</th>
                        <th>Block</th>
                    </tr>
                </thead>
                <tfoot style="background-color:brown;">
                    <tr>
                        <td colspan=" 6" align="center">
                    </td>
                    </tr>
                </tfoot>
                <tbody>
                        @foreach (var item in ViewData["xyz"] as List<Dr.finder_project.EDM.Hospital_tbl>)
                {
                    <tr>
                        <td><img src="~/Images/@item.Hospital_Image" style="height:100px;width:100px" /></td>
                        <td>@item.Hospital_Name</td>
                        <td>@item.Hospital_Mobile_No</td>
                        <td>@item.Hospital_Email_Id</td>
                        <td><a href="@Url.Action("HospitalInfo","Admin", new { id=item.Hospital_Id})" class="btn btn-danger">Read More</a></td>
                        <td><a href="@Url.Action("EditHospitalProfile","Admin", new { id = item.Hospital_Id })" class="btn btn-danger">Edit</a></td>
                        <td><a href="@Url.Action("BlockHospital","Admin", new { id=item.Hospital_Id})" class="btn btn-danger">Block</a></td>
                    </tr>
               }
                    
                </tbody>
            </table>
            </div>
    </div>
        <script type="text/javascript" src="~/Dr_finder_tmp/Admin_penal/web/js/jquery.dataTables.min.js"></script>
            <script>
	$(document).ready(function() {
    $('#example').DataTable( {
        "pagingType": "full_numbers"
    } );
} );
            </script>














