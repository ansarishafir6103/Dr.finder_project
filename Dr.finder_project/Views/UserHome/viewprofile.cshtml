@{
    ViewBag.Title = "viewprofile";
    Layout = "~/Views/Shared/User_panel_LayoutPage.cshtml";
}

<div class="container">

    <div class="col-lg-12" style="margin:0px;">
        <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
