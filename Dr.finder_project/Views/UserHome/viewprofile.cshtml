                                    @*<tr>
                                            <td>Department:</td>
                                            <td>@item.User_S_Email_Id</td>
                                        </tr>
                                        <tr>
                                            <td>Hire date:</td>
                                            <td>@item.User_S_Mobile_No</td>
                                        </tr>*@
                                    <tr>
                                        <td style="color:black;" colspan="2">Date of Birth</td>
                                        
                                        <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.User_S_DOB))</td>
                                    </tr>

                                    <tr></tr>
                                    <tr>
                                        <td style="color:black;">Gender</td>
                                        <td><a href="@Url.Action("UpdateUserProfile", "UserHome", new { u = item.User_S_Id, pn = item.User_S_Gender, chg = "gnd", u2 = item.User_S_Id })">Edit</a></td>
                                        <td>@item.User_S_Gender</td>
                                    </tr>
                                    <tr>
                                        <td style="color:black;">Home Address</td>
                                        <td><a href="@Url.Action("UpdateUserProfile","UserHome", new { u = item.User_S_Id, pn = item.User_S_Address, chg = "address",u2=item.User_S_Id })">Edit</a></td>
                                        <td>@item.User_S_Address</td>
                                    </tr>
                                    <tr>
                                        <td style="color:black;" colspan="2">Email</td>
                                        <td><a href="mailto:info@support.com">@item.User_S_Email_Id</a></td>
                                    </tr>
                                    <tr>
                                        <td style="color:black;">Phone Number</td>
                                        <td><a href="@Url.Action("UpdateUserProfile", "UserHome", new { u = item.User_S_Id, pn = item.User_S_Mobile_No, chg = "phon", u2 = item.User_S_Id })">Edit</a></td>
                                        <td>
                                            @item.User_S_Mobile_No
                                        </td>

                                    </tr>       

                                    <tr>

                                        <td style="color:black;">City</td>
                                        <td><a href="@Url.Action("UpdateUserProfile", "UserHome", new { u = item.User_S_Id, pn = item.User_S_City, chg = "city", u2 = item.User_S_Id })">Edit</a></td>
                                        <td>
                                            @item.User_S_City
                                        </td>

                                    </tr>

                                    <tr>
                                        
                                        <td style="color:black;">Pincode</td>
                                        <td><a href="@Url.Action("UpdateUserProfile", "UserHome", new { u = item.User_S_Id, pn = item.User_S_Pincode, chg = "pin", u2 = item.User_S_Id })">Edit</a></td>
